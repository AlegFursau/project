doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous")
        link(rel="stylesheet" href="../css/main.css")
        title Store
    body 
        nav.navbar.navbar-expand-lg.bg-body-tertiary.border-bottom
            .container-fluid
                .collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.text-dark.fs-4.px-3(href="/") Store 
                        li.nav-item
                            a.nav-link.text-dark.fs-4.px-3.selected(href="/new_product") New Product 

    
    .containet_form
        form(action="/new_product" method="post" body="{input, file}")
            .form_control.mt-2.mb-3.d-flex.gap-5.border.border-primary.form-control.border-success.align-items-center
                label.form-label.mb-0(for="input") Title
                input.form-control(type="text" id="input" name="input")
            .form_control.mt-2.mb-3.d-flex.gap-5.border.border-primary.form-control.border-success.align-items-center
                label.form-label.mb-0(for="file") File
                input.form-control(type="file" id="file" name="file")
            button.btn.btn-primary.w-100(type="submit") Apply

